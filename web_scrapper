class EcommerceScraper:
    """
    Classe responsável por fazer scraping de preços em sites de e-commerce
    e salvar os dados em planilha Excel com histórico
    """
    
    def __init__(self, nome_arquivo='historico_precos.xlsx'):
        self.nome_arquivo = nome_arquivo
        
        self.produtos = []
        
        self.driver = None