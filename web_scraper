class EcommerceScraper:
    """
    Classe responsável por fazer scraping de preços em sites de e-commerce
    e salvar os dados em planilha Excel com histórico
    """
    
    def __init__(self, nome_arquivo='historico_precos.xlsx'):
        self.nome_arquivo = nome_arquivo
        
        self.produtos = []
        
        self.driver = None

    def configurar_selenium(self):

        chrome_options = Options()

        chrome_options.add_argument("--headless")
        chrome_options.add_argument("--disable-gpu")
        chrome_options.add_argument("--no-sandbox")
        chrome_options.add_argument("--disable-dev-shm-usage")
        chrome_options.add_argument("--window-size=1920,1080")

        chrome_options.add_argument("user-agent=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36")

        self.driver = webdriver.Chrome(options=chrome_options)

        print("Selenium configurado com sucesso.")

        
